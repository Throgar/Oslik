<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArticleItemText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:maxLines">8</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/articleTextColor</item>
    </style>

</resources>
